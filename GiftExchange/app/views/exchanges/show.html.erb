<p id="notice"><%= notice %></p>
<h2><%=@exchange.name%></h2>

<p>
  <strong>Description:</strong>
  <%= @exchange.Description %>
</p>

<p>
  <strong>Deadline:</strong>
  <%= @exchange.Deadline %>
</p>

<p>
  <strong>Date:</strong>
  <%= @exchange.Date %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @exchange.user.name %>
  </p>


<table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Address</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% @profiles.each do |profile| %>
      <%if profile.user_id == current_user.id then @joined = true end%>
          <tr>
          <td><%= profile.name %></td>
          <td><%= profile.description %></td>
          <td><%= profile.address %></td>
          <td><%= link_to 'View Profile', profile %></td>
            <td><%= link_to 'Loeave Exchange', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  
  <%if !@joined then %>
    <%= link_to 'Join Exchange', new_profile_path(:xyz => @exchange.id) %> | 
  <%end%>
      
  <%if current_user && current_user.id == @exchange.user.id then %>
    <%= link_to 'Assign Giftees', edit_exchange_path(@exchange) %> |
  <%end%>
<%= link_to 'Back', :back %>
