            </tr>
          <%end%>
        <% end %>
      </tbody>
    </table>

    <h2>Closed</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Sign-Up Deadline</th>
          <th>Exchange Date</th>
          <th>Owner</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @otherExchanges.each do |exchange| %>
          <%if exchange.Deadline == "PASSED" then%>
            <tr>
              <td><%= exchange.name %></td>
